<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
	</ui:style>
	<g:VerticalPanel>
		<g:HorizontalPanel>
			<g:Label text="Name:"/>
			<g:AbsolutePanel height="5px" width="56px"/>
			<g:TextBox ui:field="nameTextBox" height="16px" width="170px"/>
		</g:HorizontalPanel>
		<g:VerticalPanel ui:field="attributePanel">
			<g:HorizontalPanel>
				<g:Label text="Attributes:"/>
				<g:AbsolutePanel height="5px" width="34px"/>
				<g:TextBox ui:field="atributeTextBox" height="16px" width="170px"/>
				<g:Button text="+" ui:field="attributeAddButton" height="28px" width="28px"/>
			</g:HorizontalPanel>
		</g:VerticalPanel>
		<g:VerticalPanel ui:field="operationPanel">
			<g:HorizontalPanel>
			<g:Label text="Operations:"/>
			<g:AbsolutePanel height="5px" width="27px"/>
			<g:TextBox ui:field="operationsTextBox" height="16px" width="170px"/>
			<g:Button text="+" ui:field="newOperationButton" height="28px" width="28px"/>
		</g:HorizontalPanel>
		</g:VerticalPanel>
		<g:HorizontalPanel>
			<g:CheckBox text="Is Abstract" ui:field="abstractCheckBox"/>
			<g:AbsolutePanel width="50px"/>
			<g:Label ui:field="errorLabel" styleName="errorLabel"/>
		</g:HorizontalPanel>
		<g:HorizontalPanel height="30px" horizontalAlignment="ALIGN_CENTER">
			<g:Button text="Submit" ui:field="submitButton"/>
			<g:AbsolutePanel width="50px"/>
			<g:Button text="Cancel" ui:field="cancelButton"/>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 